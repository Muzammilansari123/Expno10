#include<stdio.h>

int main() {
int n,i;
printf("\t\t** Array Reverser ** \n\n");
printf("Enter the size of the array: ");
canf("%d", &n);
int arr[n];
int *ptr = arr;
printf("Enter the elements of the array:\n");
for (i = 0; i < n; i++) {
scanf("%d", ptr + i);
}
printf("\nArray elements in reverse order:\n");
for (i = n - 1; i >= 0; i--) {
    printf("%d ", *(ptr + i));
    }
printf("\n");
return 0;
}
